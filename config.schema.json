{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "local",
    "targets"
  ],
  "properties": {
    "local": {
      "$ref": "#/definitions/localTarget"
    },
    "targets": {
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/definitions/remoteTarget"
        }
      ]
    }
  },
  "additionalProperties": true,
  "definitions": {
    "localTarget": {
      "type": "object",
      "required": [
        "path"
      ],
      "properties": {
        "path": {
          "type": "string"
        },
        "files": {
          "type": "string"
        },
        "exclude": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "defaultTarget": {
          "type": "string"
        },
        "deleteRemoteFiles": {
          "type": "boolean"
        }
      }
    },
    "remoteTarget": {
      "type": "object",
      "required": [
        "host",
        "path",
        "user"
      ],
      "properties": {
        "path": {
          "type": "string"
        },
        "host": {
          "type": "string"
        },
        "user": {
          "type": "string"
        },
        "pass": {
          "type": "string"
        },
        "port": {
          "type": "number",
          "description": "(Default = 21)"
        },
        "cache": {
          "type": "string",
          "description": "Name of checksum list file. (Default = '.synco-filelist')"
        },
        "prompt": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "boolean"
            }
          ]
        },
        "enabled": {
          "type": "boolean"
        },
        "type": {
          "type": "string",
          "description": "(reservered for future use)"
        }
      }
    }
  }
}